class Solution
{
    public String transform(String s)
    {
        char[] y=s.toCharArray();  
        int x=y.length;
        y[0]=(char)(y[0]-32); 
        int i=1;
        while(i < x){
            if(y[i-1]==' '){

                  y[i]=(char)(y[i]-32);
            }
            i++;
        }
        return String.valueOf(y);
    }
}
