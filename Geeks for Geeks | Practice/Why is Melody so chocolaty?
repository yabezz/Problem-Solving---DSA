class Complete{
    
   
    // Function for finding maximum and value pair
    public static int max_adjacent_sum (int arr[], int n) {
        int max = Integer.MIN_VALUE;
        
        for(int i=0;i<n-1;i++){
            max = Math.max(max,arr[i]+arr[i+1]);
        }
        return max;
    }
    
    
}
